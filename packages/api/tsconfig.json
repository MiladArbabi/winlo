{
  "extends": "./tsconfig.base.json",
    "compilerOptions": {
      "module": "node16",
      "target": "es2016",
      "rootDir": "src",
      "outDir": "./dist",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "noEmit": false,
      // "allowImportingTsExtensions": true,
      "moduleResolution": "node16",
      "isolatedModules": true,
      "resolveJsonModule": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "baseUrl": ".",
    },
    "include": [
      "src/**/*",           // all your .ts/.tsx server sources
      "src/**/*.d.ts",      // all your ambient declarations
      "__tests__/**/*",      // and your tests
      "migrations/20250715000000_add_product_indexes.cjs", 
      "config/knexfile.cjs.d.ts"  
    ],
    "exclude": [
      "src/__tests__",
      "dist"
    ]
}