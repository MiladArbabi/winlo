//packages/api/tsconfig.json
{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2016",
    "rootDir": ".",     
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleResolution": "Node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",           // all your .ts/.tsx server sources
    "src/**/*.d.ts",      // all your ambient declarations
    "__tests__/**/*"      // and your tests
  ]
}